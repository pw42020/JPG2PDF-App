Screen:
    MDNavigationLayout:
        WindowManager:
            MenuScreen:
                BoxLayout:
                    orientation:"vertical"
                    MDToolbar:
                        title: "toolbar"
                        left_action_items:[["menu",lambda x: nav_drawer.set_state("open")]]
                        elevation: 8
                    FileChooserIconView:
                        id:filechooser
                        path:r"C:\Users\Ninja\OneDrive\Documents\GitHub\App\Documents"
                
                MDFloatingActionButton:
                    id:plus
                    icon:"plus"
                    elevation:8
                    on_release: app.menu.open()
                    

        MDNavigationDrawer:
            id:nav_drawer
            ContentNavigationDrawer:
                BoxLayout:
                    orientation:"vertical"
                    spacing:"8dp"
                    padding:"8dp"

                    Image: 
                        source:"default_pfp.jpg"
                        height:10
                    
                    MDLabel:
                        text:"Default Profile Name"
                        font_style:"Subtitle1"
                        size_hint_y:None
                        height:cm(0.2)

                    MDLabel:
                        text:"Defaultprofileemail@gmail.com"
                        font_style:"Caption"
                        size_hint_y:None
                        height:cm(0.5)

                    ScrollView:
                        MDList:
                            id:container
                            OneLineIconListItem:
                                text:"Profile"
                                IconLeftWidget:
                                    icon:"face-profile"
                            OneLineIconListItem:
                                text:"Documents"
                                IconLeftWidget:
                                    icon:"folder"
                            OneLineIconListItem:
                                text:"Bookmarked"
                                IconLeftWidget:
                                    icon:"bookmark"
                            OneLineIconListItem:
                                text:"History"
                                IconLeftWidget:
                                    icon:"book"
                        


<MenuScreen>:
    name:"menu_screen"
    canvas.before:
        Color:
            rgba:(35/255,35/255,35/255,1)
        Rectangle:
            pos:self.pos
            size:self.size
    



        

        



