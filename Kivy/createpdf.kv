Screen:
    MDNavigationLayout:


        WindowManager:
            id:screen_manager
            MenuScreen:
                BoxLayout:
                    orientation:"vertical"
                    MDToolbar:
                        title: "toolbar"
                        left_action_items:[["menu",lambda x: nav_drawer.set_state("open")]]
                        elevation: 8
                    FileChooserIconView:
                        id:filechooser
                        path:r"C:\Users\Ninja\OneDrive\Documents\GitHub\App\Documents"
                
                MDFloatingActionButton:
                    id:plus
                    icon:"plus"
                    elevation:8
                    on_release: 
                        app.generatepdf()
                        screen_manager.current="pdf_name_check"
                    
            BookmarkScreen: 
                BoxLayout:
                    orientation: "vertical"
                    MDLabel:
                        text:"Bookmarks"
            PDFNameCheck:
                name:"pdf_name_check"
                pdfname:pdfname
                BoxLayout:
                    orientation: "vertical"
                    size_hint:0.8,0.8
                    spacing:"12dp"
                    height:"60dp"
                    text:pdfname.text
                    
                    
                    MDTextField:
                        id:pdfname
                        hint_text:"PDF Name"
                        pos_hint:{"center_x":0.5,"center_y":0.5}
                    GridLayout:
                        cols:2
                        MDRectangleFlatButton:
                            text:"Cancel"
                        MDRectangleFlatButton:
                            text:"OK"
                            on_release:
                                screen_manager.current="menu_screen"
                                app.generatepdfp2()
                    Widget:
                    

        MDNavigationDrawer:
            id:nav_drawer
            ContentNavigationDrawer:
                BoxLayout:
                    orientation:"vertical"
                    spacing:"8dp"
                    padding:"8dp"

                    Image: 
                        source:"default_pfp.jpg"
                        height:10
                    
                    MDLabel:
                        text:"Default Profile Name"
                        font_style:"Subtitle1"
                        size_hint_y:None
                        height:cm(0.2)

                    MDLabel:
                        text:"Defaultprofileemail@gmail.com"
                        font_style:"Caption"
                        size_hint_y:None
                        height:cm(0.5)

                    ScrollView:
                        MDList:
                            id:container
                            OneLineIconListItem:
                                text:"Profile"
                                IconLeftWidget:
                                    icon:"face-profile"
  
                            OneLineIconListItem:
                                on_release:
                                    root.Screen.current="menu_screen"
                                    nav_drawer.set_state("closed")
                                text:"Documents"
                                IconLeftWidget:
                                    icon:"folder"
                                
                                
                            OneLineIconListItem:
                                on_release:
                                    root.Screen.current="bookmarks"
                                    nav_drawer.set_state("closed")
                                text:"Bookmarked"
                                IconLeftWidget:
                                    icon:"bookmark"
                            OneLineIconListItem:
                                text:"History"
                                IconLeftWidget:
                                    icon:"book"
                        


<MenuScreen>:
    name:"menu_screen"
    canvas.before:
        Color:
            rgba:(35/255,35/255,35/255,1)
        Rectangle:
            pos:self.pos
            size:self.size

<BookmarkScreen>
    name:"bookmarks"
    canvas.before:
        Color:
            rgba:(35/255,35/255,35/255,1)
        Rectangle:
            pos:self.pos
            size:self.size
    

        

        

        



